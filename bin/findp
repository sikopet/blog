#!/usr/bin/perl
use strict;
use warnings;
use 5.010;
use autodie;
use Getopt::Long;
use Pod::Usage;

# Command line options
GetOptions(
    "h|?|help"   => \my $help,
    "p|post=s"   => \my $post,
    "i|inpost=s" => \my $inpost,
) or pod2usage(1);

# Help
pod2usage( -exitval => 0, -verbose => 2, -noperldoc => 1 ) if $help;

if ($post) {
    print sort `find posts -type f -iname "*$post*"`;
} elsif ($inpost) {
    print sort `grep --color=always -l -R -i -E '$inpost' posts | sort | uniq`;
} else {
    print sort `find posts -type d | sort`;
}

__END__

=head1 NAME

findp - search through my blog posts

=head1 SYNOPSIS

findp [options]

  options:
    -h, -?, --help      brief help message
    -p, --post STRING   find posts with titles containing STRING
    -i, --inpost STRING find posts cointaining STRING

  List available areas (topics) if no option is used. Searches are case
    insensitive.
